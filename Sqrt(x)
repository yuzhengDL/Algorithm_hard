/*
思路：二分查找即可
*/
class Solution {
public:
    int mySqrt(int x) {
        if (x <= 0) return 0;
        int left = 1;
        int right = x;
        int mid;
        while (left<=right){
            int mid = left + (right - left) / 2;
            if (mid > x / mid) right = mid - 1;
            else if(mid < x / mid){
                left = mid + 1;
            }
            else{
                return mid;
            }
        }
        return right;
    }
};
